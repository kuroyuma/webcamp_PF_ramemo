<div class="container">
  <h1 class= "text-center mt-5">ログイン</h1>
  <div class="row">
    <div class="col mx-auto">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="form-group row">
          <%= f.label :メールアドレス, class: "col-3" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form col-7" %>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード, class: "col-3" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form col-7" %>
        </div>


        <% if devise_mapping.rememberable? %>
          <div class="form-group row">
            <%= f.check_box :remember_me, class: "col-3" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-warning" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
