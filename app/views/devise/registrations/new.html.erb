<div class="container">
  <h1 class= "text-center mt-5">新規会員登録</h1>
  <div class="row">
    <div class="col mx-auto">
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group row">
          <%= f.label :名前, class: "col-3" %><br />
          <%= f.text_field :name, autofocus: true, class: "form col-7" %>
        </div>
        <div class="form-group row">
          <%= f.label :メールアドレス, class: "col-3" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form col-7" %>
        </div>
        <div class="form-group row">
          <div class="col-3"><%= f.label :パスワード %></br>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br /></div>
          <%= f.password_field :password, autocomplete: "new-password", class: "form col-7" %>
        </div>
        <div class="form-group row">
          <%= f.label :パスワード確認, class: "col-3" %></br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form col-7" %>
        </div>
        <div class="form-group row" >
          <%= f.submit "新規登録", class: "btn btn-warning" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>