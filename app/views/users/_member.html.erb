<div class="container">
  <div class='row'>
    <table class="table mx-5 mt-5">
      <thead>
        <tr>
          <th></th>
          <th>ユーザー名</th>
          <th>フォロー数</th>
          <th>フォロワー数</th>
          <th></th>
        </tr>
      </thead>
      <% users.each do |user| %> <!-- @users → users -->
      <tbody>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill,40,40, class: "p-0 rounded-circle" %></td>
          <td><%= link_to user_path(user) do %><%= user.name %><% end %></td>
          <td><%= user.followings.count %>フォロー</td>
          <td><%= user.followers.count %>フォロワー</td>
          <td>
            <% if current_user != user %>
              <% if user.followed_by?(current_user) %>
                <p><%=link_to "フォロー中", user_relationships_path(user.id), method: :delete %></p>
              <% else %>
                <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
              <% end %>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>