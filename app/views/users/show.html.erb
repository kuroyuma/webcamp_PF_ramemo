<div class="container">
  <div class='row mx-auto mt-5'>
    <div class='col-md-3'>
      <%= attachment_image_tag @user, :profile_image, :fill,250,250, class: "img-thumbnail", fallback: "no_image.jpg" %>
    </div>
    <div class='col-9 '>
      <table class="table table-borderless">
        <tr>
          <th class='col-md-3'>ユーザー名</th>
          <td class='col-md-9'><%= @user.name %></td>
        </tr>
        <tr>
          <th>私の一推し</th>
          <td><%= @user.recommend %></td>
        </tr>
        <tr>
          <th>食べた量</th>
          <td><%= @posts.count %>杯</td>
        </tr>
        <tr>
          <th>プロフィール</th>
          <td><%= @user.self_introduction %></td>
        </tr>
        <tr>
          <th></th>
          <td>
            <% if current_user != @user %>
              <% if @user.followed_by?(current_user) %>
                <p><%=link_to "フォロー中", user_relationships_path(@user.id), method: :delete %></p>
              <% else %>
                <p><%=link_to "フォローする", user_relationships_path(@user.id), method: :post %></p>
              <% end %>
            <% end %>
          </td>
        </tr>

      </table>
          <%=link_to "フォロー", follows_user_path(@user.id) %><%= @user.followings.count %>人
          <%=link_to "フォロワー", followers_user_path(@user.id) %><%= @user.followers.count %>人

      <% if @user == current_user %>
      <%= link_to '編集', edit_user_path, class: "fas fa-user-edit btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'posts/list', posts: @posts %>