<div class="container">
  <div class='row mx-auto mt-5'>
    <div class='col-md-3'>
      <%= attachment_image_tag @user, :profile_image, :fill,250,250, class: "img-thumbnail", fallback: "no_image.jpg" %>
    </div>
    <div class='col-md-9 '>
      <table class="table table-borderless">
        <tr>
          <th>ユーザー名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>私の一推し</th>
          <td><%= @user.recommend %></td>
        </tr>
        <tr>
          <th>食べた量</th>
          <td><%= @posts.count %>杯</td>
        </tr>
        <tr>
          <th>プロフィール</th>
          <td><%= @user.self_introduction %></td>
        </tr>
        <tr>
          <th></th>
          <td id="user_<%= @user.id %>">
            <div class="relationship"><%= render 'relationships/relationship', user: @user %></div>
          </td>
        </tr>
      </table>
      <div class="follow_count_<%= @user.id %>"><%=link_to "フォロー", follows_user_path(@user.id) %><%= @user.followings.count %>人</div>
      <div class="followers_count_<%= @user.id %>"><%=link_to "フォロワー", followers_user_path(@user.id) %><%= @user.followers.count %>人</div>
      <% if @user == current_user %>
        <%= link_to '編集', edit_user_path, class: "fas fa-user-edit btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'posts/list', posts: @posts %>