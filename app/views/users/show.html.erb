<div class='conteiner'>
  <div class='row mx-auto mt-5'>
    <div class='col-3'>
      <%= attachment_image_tag @user, :profile_image, :fill,250,250, class: "img-thumbnail" %>
    </div>
    <div class='col-9 '>
      <table class="table table-borderless">
        <tr>
          <th>ユーザー名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>私の一推し</th>
          <td><%= @user.recommend %></td>
        </tr>
        <tr>
          <th>食べた量</th>
          <td><%= @posts.count %>杯</td>
        </tr>
        <tr>
          <th>プロフィール</th>
          <td><%= @user.self_introduction %></td>
        </tr>
      </table>
      <% if @user == current_user %>
      <%= link_to '編集', edit_user_path, class: "fas fa-user-edit btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'posts/list', posts: @posts %>