<div class = 'conteiner'>
  <h1 class= "text-center">マイページ編集</h1>
  <div class = 'row'>
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <%= form_with model: @user, local:true do |f| %>
        <div class="form-group row">
          <%= f.label :画像, class: "col-3" %>
          <%= f.attachment_field :profile_image, class: "form col-7" %>
        </div>
        <div class="form-group row">
          <%= f.label :ユーザー名, class: "col-3" %>
          <%= f.text_field :name, class: "form col-7" %>
        </div>
        <div class="form-group row">
          <%= f.label :私の一推し, class: "col-3" %>
          <%= f.text_field :recommend, class: "form col-7" %>
        </div>
        <div class="form-group row">
          <!--<= f.label :食べた量, class: "col-3" %>-->
        </div>
        <div class="form-group row">
          <%= f.label :プロフィール, class: "col-3" %>
          <%= f.text_area :self_introduction, class: "form col-7" %>
        </div>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>
</div>