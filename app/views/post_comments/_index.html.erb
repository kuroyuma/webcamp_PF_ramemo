<div class='row mt-5'>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>ユーザー名</th>
        <th>投稿日時</th>
        <th>コメント</th>
        <th></th>
      </tr>
    </thead>
    <% post.post_comments.each do |post_comment| %> <!--@post→post-->
      <tbody>
        <tr>
          <td><%= attachment_image_tag post_comment.user, :profile_image, :fill,40,40, class: "p-0 rounded-circle" %></td>
          <td><%= post_comment.user.name %></td>
          <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= post_comment.comment %></td>
          <% if post_comment.user == current_user %>
          <td><%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>