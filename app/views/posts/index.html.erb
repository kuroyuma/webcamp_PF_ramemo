<div class = 'conteiner'>
  <div class = 'row'>
  <% @posts.each do |post| %>
  <div class = 'col'>
    <div class = 'row'>
    <%= link_to post_path(post) do %>
      <%= attachment_image_tag post, :image, :fill,200,200 %>
    <% end %>
    </div>
    <div class = 'row'>
　  <%= post.shop_name %><!--店名-->
　  </div>
　  <div class = 'row'>
　  <%= post.food_name %><!--商品名-->
　  </div>
　  <div class = 'row'>
    <%= post.prefecture %><!--都道府県-->
    </div>
  </div>
  <% end %>
  </div>
</div>