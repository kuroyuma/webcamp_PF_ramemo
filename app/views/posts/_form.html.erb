iv class = 'row'>
<div class="col mx-auto">
  <%= form_with model: post, local:true do |f| %> <!--@post→post-->
    <div class="form-group row mx-auto">
      <%= f.label :画像, class: "col-3" %>
      <%= f.attachment_field :image, class: "form col-7" %>
    </div>
    <div class="form-group row mx-auto">
      <%= f.label :ショップ名, class: "col-3" %>
      <%= f.text_field :shop_name, class: "form col-7" %>
    </div>
    <div class="form-group row mx-auto">
      <%= f.label :ラーメン名, class: "col-3" %>
      <%= f.text_field :food_name, class: "form col-7" %>
    </div>
    <div class="form-group row mx-auto">
      <%= f.label :ジャンル名, class: "col-3" %>
      <%= f.select :genre, Post.genres.keys, {prompt: '選択してください'}, class: 'form-control btn btn-warning col-7' %>
    </div>
    <div class="form-group row mx-auto">
      <%= f.label :値段, class: "col-3" %>
      <%= f.text_field :price, class: "form col-7" %>
    </div>
    <div class="form-group row mx-auto">
      <%= f.label :説明, class: "col-3" %>
      <%= f.text_area :introduction, class: "form col-7" %>
    </div>
    <div class="form-group row mx-auto">
      <%= f.label :都道府県, class: "col-3" %>
      <%= f.select :prefecture, Post.prefectures.keys, {prompt: '選択してください'}, class: 'form-control btn btn-warning col-7' %>
    </div>
    <div id="evaluate_stars">
      <%= f.label :評価, class: "col-3" %>
    </div>
    <div class="text-right">
    <%= f.submit '投稿', class: "btn btn-warning" %>
    </div>
  <% end %>
  <script>
    $('#evaluate_stars').raty({
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      starHalf: "<%= asset_path('star-half.png') %>",
      scoreName: 'post[evaluation]'
    });
  </script>
</div>
