<div class = 'conteiner'>
  <div class = 'row'>
    <% posts.each do |post| %> <!-- @posts → posts -->
    <div class = 'col'>
      <div class="card mx-auto mt-5" style="width:250px;">
        <img class="card-img-top">
        <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :image, :fill,250,250, class: "img-thumbnail" %>
        <% end %>
        </img>
        <div class="row">
          <div class="col-2">
            <%= attachment_image_tag post.user, :profile_image, :fill,50,50, class: "mt-5 ml-2 rounded-circle" %>
          </div>
          <div class="col-10">
            <div class="card-body py-0">
              <h5><%= post.prefecture %></h5>
              <%= post.shop_name %></br><!--店名-->
              <%= post.food_name %></br><!--商品名-->
              ☞ <%= post.post_comments.count %>コメント</br>
              <% if post.favorited_by?(current_user) %>
                <%= link_to post_favorites_path(post), method: :delete do %>
                  ♥ <%= post.favorites.count %>いいね
                <% end %>
              <% else %>
                <%= link_to post_favorites_path(post), method: :post do %>
                  ♡ <%= post.favorites.count %>いいね
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>