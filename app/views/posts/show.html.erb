<div class='conteiner'>
  <div class='row mx-auto mt-5'>
    <div class='col-4 text_center'>
      <%= attachment_image_tag @post, :image, :fill,250,250, class: "img-thumbnail" %>
    </div>
    <div class='col-6 '>
      <table class="table table-borderless">
        <tr>
          <th>投稿者</th>
          <td><%= link_to user_path(@user) do %><%= @user.name %><% end %></td>
        </tr>
        <tr>
        <tr>
          <th>ショップ名</th>
          <td><%= @post.shop_name %></td>
        </tr>
        <tr>
          <th>ラーメン名</th>
          <td><%= @post.food_name %></td>
        </tr>
        <tr>
          <th>ジャンル名</th>
          <td><%= @post.genre %></td>
        </tr>
        <tr>
          <th>値段</th>
          <td><%= @post.price.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>説明</th>
          <td><%= @post.introduction %></td>
        </tr>
        <tr>
          <th>都道府県</th>
          <td><%= @post.prefecture %></td>
        </tr>
      </table>
      <%= link_to '編集', edit_post_path, class: "btn btn-warning" %>
      <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-danger ml-5" %>
    </div>
  </div>


  <div class='row'>
    <div class="col-8 mt-5">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>ユーザー名</th>
            <th>投稿日時</th>
            <th>コメント</th>
            <th></th>
          </tr>
        </thead>
        <% @post.post_comments.each do |post_comment| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag post_comment.user, :profile_image, :fill,40,40, class: "p-0 rounded-circle" %></td>
            <td><%= post_comment.user.name %></td>
            <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= post_comment.comment %></td>
            <td><%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-4 mt-5">
      <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
        <%= f.text_area :comment, placeholder: "コメントフォーム" %>
        <%= f.submit "送信する" %>
      <% end %>
    </div>
  </div>
</div>