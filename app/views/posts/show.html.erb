<div class="container">
  <div class='row mx-auto mt-5'>
    <div class='col-md-3' id="post_<%= @post.id %>">
      <%= attachment_image_tag @post, :image, :fill,250,250, class: "img-thumbnail" %></br>
       ☞ <%= @post.post_comments.count %>コメント</br>
      <div class="favorite"><%= render 'favorites/favorite', post: @post %></div>
    </div>
    <div class='col-9'>
      <table class="table table-borderless">
        <tr>
          <th class='col-md-3 col-sm-3 col-3'>投稿者</th>
          <td class='col-md-9 col-sm-9 col-9'><%= link_to user_path(@user) do %><%= @user.name %><% end %></td>
        </tr>
        <tr>
        <tr>
          <th>ショップ名</th>
          <td><%= @post.shop_name %></td>
        </tr>
        <tr>
          <th>ラーメン名</th>
          <td><%= @post.food_name %></td>
        </tr>
        <tr>
          <th>ジャンル名</th>
          <td><%= @post.genre %></td>
        </tr>
        <tr>
          <th>値段</th>
          <td><%= @post.price.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>評価</th>
          <td class="movie-evaluation" data-score="<%= @post.evaluation %>"></td>
        </tr>
        <tr>
          <th>説明</th>
          <td><%= @post.introduction %></td>
        </tr>
        <tr>
          <th>都道府県</th>
          <td><%= @post.prefecture %></td>
        </tr>
      </table>
      <script>
        $('.movie-evaluation').raty({
          readOnly: true,
          score: function() {
            return $(this).attr('data-score');
          },
          path: '/assets/'
        });
      </script>
      <% if @post.user == current_user %>
        <%= link_to '編集', edit_post_path, class: "btn btn-warning" %>
        <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-danger ml-5" %>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <%= render 'post_comments/comment', post: @post, post_comment: @post_comment %>
  <div class='row mt-5'>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>ユーザー名</th>
          <th>投稿日時</th>
          <th>コメント</th>
          <th></th>
        </tr>
      </thead>
      <% @post.post_comments.each do |post_comment| %>
      <tbody>
        <tr>
          <td><%= attachment_image_tag post_comment.user, :profile_image, :fill,40,40, class: "p-0 rounded-circle" %></td>
          <td><%= post_comment.user.name %></td>
          <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= post_comment.comment %></td>
          <% if post_comment.user == current_user %>
          <td><%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>